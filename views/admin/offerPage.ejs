            <script>
              document.write(new Date().getFullYear());
             async function validate() {
                console.log("coming here");
                const check = await validateAndSubmitCoupon();
                if (check) {
                  document.getElementById('form').submit();
                }
              }

              function validateAndSubmitCoupon() {
                const nameRegex = /^[A-Za-z]+( [A-Za-z]+)?$/;
                const codeRegex = /^[a-zA-Z0-9]+$/;
                const moneyRegex = /^[-+]?[0-9]{1,5}(,\d{3})*(\.\d+)?$/;
                const percentageRegex = /^(2[0-9]|3[0-9]|4[0-9]|5[0-9]|6[0-9]|70)$/;
                const descriptionRegex = /^(?!.*\n).+$/;
                const currentDate = new Date().toISOString().split("T")[0];

                const form = document.getElementById('form');

                const name = form.elements["name"].value;
                const code = form.elements["code"].value;
                const min = form.elements["min"].value;
                const discount = form.elements["discount"].value;
                const date = form.elements["date"].value;
                const description = form.elements["description"].value;

                if (!nameRegex.test(name)) {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Name should only contain letter and space!",
                  });
                  return false;
                } else if (!codeRegex.test(code)) {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "code should only contain letter and number!",
                  });
                  return false;
                } else if (!moneyRegex.test(min)) {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "only digits 1 to 99999",
                  });
                  return false;
                } else if (!percentageRegex.test(discount)) {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "only digits between 20 and 70 for discount",
                  });
                  return false;
                } else if (date < currentDate) {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "date shouldn't go back of todays",
                  });
                  return false;
                }  else if (!descriptionRegex.test(description)) {
                  Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "only letters for description!",
                  });
                  return false;
                }else {
                  Swal.fire({
                    icon: "success",
                    title: "wow...",
                    text: "The coupen has been saved!",
                  });
                  return true;
                }
                // Proceed with form submission (e.g., send data to server)

                // Here you would typically send the data to the server
              }
