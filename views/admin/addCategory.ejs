            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <form action="/admin/adddCategory" method="post" id="form">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="categoryName"
                                        name="name" onkeyup="validateCategoryName()" required/>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control"
                                        name="description" required></textarea>
                                </div>

                                <div class="d-grid col-md-2">
                                    <button id="button" class="btn btn-primary">Create category</button>
                                </div>
                            </form>

                        </div>
                        <!-- .col// -->
